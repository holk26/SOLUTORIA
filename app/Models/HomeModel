<?php

namespace App\Models;

use CodeIgniter\Model;

class HomeModel extends Model
{
    protected $table = 'indicadores';
    protected $allowedFields = ['id', 'codigo', 'nombre', 'unidad_medida', 'fecha', 'valor'];
    
    public function getIndicadores($name = false)
    {
        if ($name === false) {
            return $this->findAll();
        }

        return $this->where(['indicadores' => $name])->first();
    }
}